.container-fluid: .row
  .col-md-2
    span Search:
    input(type="text", ng-model="query")
    br
    span Order By:
    select(ng-model="orderProp")
      option(value="name") Name
      option(value="snippet") Snippet
  .col-md-10
    ul.phones: li.clearfix(ng-repeat="phone in phones | filter: query | orderBy: orderProp")
      a.thumb: img(ng-src="{{phone.imageUrl}}")
      .intro
        a(href="#/phones/{{phone.id}}") {{phone.name}}
        p {{phone.snippet}}
p Total number of phones: {{phones.length}}